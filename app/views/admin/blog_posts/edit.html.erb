<h1>Editing Blog Post</h1>

<% form_for @blog_post, :url => '/admin/blog_posts' + (@blog_post.id ? "/" + @blog_post.id.to_s : '') do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

	<p>
		<%= f.label :live_date %><br />
		<%= f.date_select :live_date %>
	</p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', :action => 'index' %>