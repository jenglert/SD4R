<div class="newLandingPage">
	<h2>Create a New Landing Page</h2>
	<% form_for @landing_page, :url => '/admin/landing_pages' do |f|  %>
	 	<%= f.error_messages %>
	
		<div class="section">
			<strong>name:</strong>
			<div><%= f.text_field :name %></div>
		</div>
		<div class="section">
			<strong>content:</strong>
			<div><%= f.text_area :content %></div>
		</div>
		<div class="section">
			<strong>url keyword:</strong><div><%= f.text_field :url_keyword %></div>
		</div>
		<div class="section">
			<strong>layout:</strong><div><%= f.select :style, options_from_collection_for_select(LandingPage.layouts, 'id', 'name') %></div>
		</div>
			
		<%= submit_tag 'Create', { :class => 'submit'} %>
	<% end %>
</div>