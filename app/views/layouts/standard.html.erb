<!DOCTYPE html PUBLIC
  "-//W3C//DTD XHTML 1.1//EN"
  "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html>
	<head>
		<%= render :partial => 'partials/head.html.erb' %>
		<title><%= @page_title.nil? ? '' : "#{@page_title} - " %>Vroommates</title>
		<link rel="SHORTCUT ICON" href="/favicon.ico">
		
		<%= yield :head %>
		
	</head>
	<body>
		<% if flash[:notice] || flash[:error] %>
			<div class="flashNotice">
				<% if flash[:error] %>
					<div class="orangish">Something Went Wrong</div>
				<% end %>
				<%= flash[:notice] %>
				<%= flash[:error] %>
			</div>
			<script type="text/javascript">
				$('.flashNotice').slideDown();
			</script>
		<% end %>
		
		<div class="mainLayout">
			<div class="whiteBackgroundLayout">
				<div class="siteLogo">
					<%= image_tag "vroommates_logo.png", :alt => 'Vroommates Logo', :class => "vroommatesLogo" %> 
					<% if !current_user %>
						<div class="login">
							<% form_for User.new(:email => '-email-', :password => '-password-'), :url => "/login/login" do |u| %>
								<%= u.text_field :email, :class => 'email', :onclick => 'hideShowLoginOverlay("email")', :onkeyup => 'hideShowLoginOverlay("email")', :onkeydown => 'hideShowLoginOverlay("email")', :onblur => 'hideShowLoginOverlay("email")' %>
								<%= link_to 'Forgot Password', { :controller => 'users', :action => 'forgot_password' }, { :class => 'forgotPassword'} %>
								<br />
								<%= u.password_field :password, :class => 'password', :onclick => 'hideShowLoginOverlay("password")', :onkeyup => 'hideShowLoginOverlay("password")', :onkeydown => 'hideShowLoginOverlay("password")', :onblur => 'hideShowLoginOverlay("password")' %>
								<%= image_submit_tag 'login-button.png', :class => 'loginSubmit'%>
							<% end %>
						</div>
					<% else %>
					
					<% end %>
					
					<div class="clearBoth" ></div>
				</div>
				<%= yield %>
				
				<div class="clearBoth"></div>
				
				<div class="bottomNav">
					<%= link_to '[Host an Event]', '/host-an-event' %>
					<%= link_to '[Blog]', '/blog/' %>
					<%= link_to '[Privacy Policy]', '/privacy-policy' %>
					<%= link_to '[Contact Us]', '/contact-us' %>
					<div class="share floatRight">
						<!-- AddThis Button BEGIN -->
						<div class="addthis_toolbox addthis_default_style">
							<a class="addthis_button_preferred_1"></a>
							<a class="addthis_button_preferred_2"></a>
							<a class="addthis_button_preferred_3"></a>
							<a class="addthis_button_preferred_4"></a>
							<a class="addthis_button_compact"></a>
						</div>
						<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=xa-4c8d0ba4449114d0"></script>
						<!-- AddThis Button END -->
					</div>
				</div>
			</div>
		</div>
		
		<script type="text/javascript">
		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-18499048-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();
		</script>
	</body>
</html>