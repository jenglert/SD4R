<div class="blogs">
	<% @page_title = "The Official VRoomMates Blog" %>
	
	<h2 class="taglineSmall">The Official VRoomMates Blog</h2>
	<%= render :partial => '/partials/email_city_capture' %>
	
	<% @blogs.each do |blog| %>
		<div class="blog">
			<%= link_to blog.title, :action => 'show', :id => blog.id %> 
			<span class="postedOn"><%= blog.live_date.andand.simple || blog.created_at.simple %></span>
			<div class="content">
				<%= blog.content %>
			</div>
		</div>
	<% end %>
</div>