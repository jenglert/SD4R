

<div class="registration" >
<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <div class="header">
	<span class="important">Basics:</span> Help us find you a roommate.
  </div>

	<p>
		<%= f.text_field :first_name, :class=> "first_name", :value => 'First Name', :onFocus => "if(this.value=='First Name') this.value='';", :onBlur => "if(this.value=='') this.value='First Name';"%> 
		<%= f.text_field :last_name, :class=> "last_name", :value => 'Last Name', :onFocus => "if(this.value=='Last Name') this.value='';", :onBlur => "if(this.value=='') this.value='Last Name';", :onSubmit => "if $('last_name').value == 'Last Name'  { alert ('Please Enter Your Last Name'); }"%> 
	</p>

	<p>
		<%= f.text_field :email, :class=> "email", :value => 'Email Address', :onFocus => "if(this.value=='Email Address') this.value='';", :onBlur => "if(this.value=='') this.value='Email Address';"%> 
	</p>

	<p>
		<%= f.label :gender %><span class="colon">:</span>
		<% [ 'male', 'female' ].each do |gender| %>
			<%= f.radio_button:gender, gender	  %>
			<%= f.label "gender#{gender}", gender.humanize %>
		<% end %>
	</p>
	
	<p>
		<%= f.label :age %><span class="colon">:</span>
		<%= f.date_select :age, :start_year => Time.now.year - 70, :end_year => Time.now.year - 16  %>
	</p>

	  <p>
		  <div class="header">
			<span class="important">What you want:</span> Tell us about your perfect roommate situation
		  </div>
	  </p>
	    <%= f.label :maximum_monthly_rent %><span class="colon">:</span>
	    <%= f.text_field :desired_rent_max, :class=> "rent_max" %>
	  </p>

	  <p>
	    <%= f.label :maximum_number_of_roommates %><span class="colon">:</span>
		<%= f.text_field :desired_number_of_roommates, :class=> "desired_number_of_roommates" %>
	  </p>

		<p>
		  <%= f.label :maximum_age %><span class="colon">:</span>
		  <%= f.text_field :desired_age_min, :class=> "desired_age_min" %>
			&nbsp;
		  <%= f.label :minimum_age %><span class="colon">:</span>
		  <%= f.text_field :desired_age_max, :class=> "desired_age_max" %>
		</p>



		<p>	
		<%= f.label :gender %><span class="colon">:</span>
		  <% [ 'male', 'female' ].each do |gender| %>
		    <%= f.radio_button:desired_gender, gender	  %>
		    <%= f.label "gender#{gender}", gender.humanize %>
		<% end %>
		</p>
	
	<p>
	<%= f.label :Smoking %><span class="colon">:</span>
	  <% [ 'Yes', 'No' ].each do |smoking| %>
	    <%= f.radio_button :desired_smoking_preference, smoking %>
	    <%= f.label "smoking#{smoking}", smoking.humanize %>
	<% end %>
	</p>
  <p>
    <%= f.label :has_a_room_needs_a_roomate %>
    <%= f.check_box :has_a_room %>
  </p>



  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
</div>

